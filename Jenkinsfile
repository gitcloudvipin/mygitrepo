pipeline {
  agent any
  stages {
     stage('Build'){
        steps {
            echo "this is build step"
              }
            }
     stage("test") {
        steps {
              echo " this is test step "
                }
        }
     stage("Deploy") {
        steps {
           echo "this is deploy step"
             }
     }
     stage("apllication status") {
         steps {
            echo " this is my application "
               }
         }

    }

}
